<div class="new-comment">
      <div class="card">
        <div class="card-header">
          Are you sure you would like to delete this comment?
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>{{comment_text}}</p>
            <p class="user-date">Created by {{user.name}}
          </blockquote>
        </div>
        <button type="submit" class="btn btn-primary delete-comment-button-confirm" data-id="{{id}}">Delete Comment</button>
    </div>
</div>
<script src="/js/deletecomment.js"></script>