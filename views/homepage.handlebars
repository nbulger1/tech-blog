{{#each blogs as |blog|}}
<a class="card-link" href="/{{blog.id}}">
<div class="card">
    <div class="card-header">
        {{blog.title}}
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{blog.text}}</p>
            <footer class="blockquote-footer">{{blog.key_phrase}}</footer>
            <p class="user-date">Created by {{blog.user.name}} on {{format_date blog.date_created}}
        </blockquote>
        <button type="submit" class="btn btn-primary add-comment">Add Comment</button>
    </div>
</div>
</a>
{{/each}}