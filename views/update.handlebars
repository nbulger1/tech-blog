<div class="new-comment">
      <div class="card">
        <div class="card-header">
          {{title}}
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>{{text}}</p>
            <footer class="blockquote-footer">{{key_phrase}}</footer>
          </blockquote>
        </div>
      <form class="update-blog-post">
        <div class="form-group">
          <label for="newTitle">Title</label>
          <input class="form-control" id="newTitle" placeholder="The Hidden Secrets of Tech">
        </div>
        <div class="form-group">
          <label for="newBlogText">Blog Text</label>
          <textarea class="form-control" id="newBlogText" rows="3"></textarea>  
        </div>
        <div class="form-group">
          <label for="newKeyPhrase">Key Phrase</label>
          <input class="form-control" id="newKeyPhrase" placeholder="Don't use cookies!">
        </div>
        <div class="update-post">
            <button type="submit" class="btn btn-primary" data-id="{{id}}">Update Post</button>
        </div>
      </form>

</div>
<script src="/js/updatepost.js"></script>