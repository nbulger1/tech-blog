{{#each blogs as |blog|}}
<div class="card">
    <div class="card-header">
        {{blog.title}}
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{blog.text}}</p>
            <footer class="blockquote-footer">{{blog.key_phrase}}</footer>
        </blockquote>
    </div>
</div>
{{/each}}

<div class="create-new-post">
    <a href="/api/blog/newpost"><button type="submit" class="btn btn-primary">Create New Post</button></a>
</div>
<script src="/js/blog.js"></script>
